upstream serv {
	server backend:5000;
}

server {
    listen ${PORT:-80};
    server_name  _;

    root /usr/share/nginx/html;
    index index.html;

    location /images/ {
	    proxy_pass http://serv;
        proxy_redirect off;
    }

    location / {
        try_files $$uri /index.html;
    }
}
