mixin button(href, text, defaultColor="#e94560", width='255', fz='16px', style='')
  table(width=width, style='margin: 0; padding: 0;')
    tbody
      tr
        td
          div
            a(href=href, target='_blank', style=`letter-spacing: 0.32px; cursor: pointer; background-color:${defaultColor}; border:1px solid ${defaultColor}; border-radius: 10px; color:#ffffff;display:inline-block;font-family:\'Manrope\',\'Arial\', sans-serif;font-size:${fz};font-weight:400;line-height:44px;text-align:center;text-decoration:none;width:${width}px;-webkit-text-size-adjust:none;mso-hide:all;` + style)= text
