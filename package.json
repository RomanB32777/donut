{
  "name": "app",
  "version": "5.0.6",
  "description": "",
  "scripts": {
    "frontend": "npm start --prefix frontend",
    "backend": "npm run dev --prefix backend",
    "types": "npm run dev --prefix types",
    "frontend:install": "npm install --prefix frontend",
    "frontend:build": "npm  run build --prefix frontend",
    "backend:install": "npm install --prefix backend",
    "types:install": "npm install --prefix types",
    "install": "concurrently \"npm install\" \"npm run frontend:install\" \"npm run backend:install\" \"npm run types:install\"",
    "dev": "concurrently \"npm run types\" \"npm run backend\" \"npm run frontend\"",
    "dumpSql": "docker exec -i donut_db_1 pg_dump --username user -d dbname > /home/deploy/donut-folder/dump.sql",
    "execSql": "docker exec -it donut_db_1 psql  -U user -d dbname",
    "dockerUp": "docker-compose up -d --build",
    "dockerStop": "docker-compose stop",
    "dockerDown": "docker-compose down",
    "dockerRmiDangling": "docker rmi $(docker images -f dangling=true -q)",
    "dockerClearVolume": "docker volume rm pg_data",
    "dockerClear": "docker system prune -a -f"
  },
  "author": "Roman <r.bogdanovskiy@onpoint.ru>",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^7.2.2"
  },
  "devDependencies": {
    "typescript": "^4.9.3"
  }
}
