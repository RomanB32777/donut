{
  "compilerOptions": {
    "target":"ESNEXT",
    "module":"commonjs",
    "outDir":"./build",
    "rootDir":"./src" /* assuming that your code live in ./src */,
    "moduleResolution":"node",
    "baseUrl":".",
    "strict": true,
    "esModuleInterop": true,
    "removeComments": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "lib": ["esnext"],
  "ts-node": {
    "esm": true
  }
}